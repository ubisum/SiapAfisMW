			<pattern>%date %-5level %logger{35} - %message%n</pattern>
		</layout>
	</appender> -->


	<root level="DEBUG">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>

	<logger name="it.ader.gestionaleesp.parser" level="debug" additivity="false">
		<appender-ref ref="FILE" />
		<appender-ref ref="CONSOLE" />
	</logger>
	
